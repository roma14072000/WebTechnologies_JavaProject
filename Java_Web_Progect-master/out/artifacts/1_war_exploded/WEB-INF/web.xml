<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <resource-ref>
        <res-ref-name>jdbc/1</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.priem.controllers.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.priem.controllers.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addEnrolleeInfServlet</servlet-name>
        <servlet-class>com.priem.controllers.AddEnrolleeInfServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addEnrolleeInfServlet</servlet-name>
        <url-pattern>/addEnrolleeInfServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.priem.controllers.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>acceptServlet</servlet-name>
        <servlet-class>com.priem.controllers.AcceptServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>acceptServlet</servlet-name>
        <url-pattern>/acceptServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>statisticsServlet</servlet-name>
        <servlet-class>com.priem.controllers.StatisticsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>statisticsServlet</servlet-name>
        <url-pattern>/statisticsServlet</url-pattern>
    </servlet-mapping>
</web-app>
